# AWS Provider Configuration
aws_access_key = "YOUR_AWS_ACCESS_KEY"  # DO NOT PUSH ACTUAL KEY! This is just a placeholder.
aws_secret_key = "YOUR_AWS_SECRET_KEY"  # DO NOT PUSH ACTUAL KEY! This is just a placeholder.
aws_region     = "ap-northeast-1"

# ------------------------------------------------------------
# LLM API Configuration
# ------------------------------------------------------------
anthropic_api_key   = "sk-ant-api03-example"  # DO NOT PUSH ACTUAL KEY!
open_router_api_key = "sk-or-v1-example"      # DO NOT PUSH ACTUAL KEY!

# ------------------------------------------------------------
# Discord Configuration
# ------------------------------------------------------------
kasen_bot_token         = "YOUR_DISCORD_BOT_TOKEN"  # DO NOT PUSH ACTUAL TOKEN!
karasuno_endo_bot_token = "YOUR_DISCORD_BOT_TOKEN"  # DO NOT PUSH ACTUAL TOKEN!
rusudan_bot_token         = "YOUR_DISCORD_BOT_TOKEN"  # DO NOT PUSH ACTUAL TOKEN!

kasen_times_webhook         = "https://discord.com/api/webhooks/xxx/yyy"  # DO NOT PUSH ACTUAL URL!
karasuno_endo_times_webhook = "https://discord.com/api/webhooks/xxx/yyy"  # DO NOT PUSH ACTUAL URL!
rusudan_times_webhook       = "https://discord.com/api/webhooks/xxx/yyy"  # DO NOT PUSH ACTUAL URL!
darcy_times_webhook         = "https://discord.com/api/webhooks/xxx/yyy"  # DO NOT PUSH ACTUAL URL!

# ------------------------------------------------------------
# Flask Configuration
# ------------------------------------------------------------
flask_secret_key = "your-flask-secret-key"  # DO NOT PUSH ACTUAL KEY!

# Environment Configuration
environment = "dev"
project     = "vecr-garage"

# Tags
tags = {
  Environment = "dev"
  Project     = "vecr-garage"
  ManagedBy   = "terraform"
}

# EC2 Configuration
instance_type = "t3.micro"
key_name = "vecr-ssh-key"  # Make sure this SSH key exists in your AWS account
root_volume_size = 20
create_elastic_ip = true
detailed_monitoring_enabled = false

# EC2 Users Configuration

users = [
  {
    username = "user1"
    ssh_keys  = ["ssh-rsa AAAA..."]  # SSH keys of user1
  },
  {
    username = "user2"
    ssh_key  = [
      "ssh-rsa AAAA...",
      "ssh-rsa AAAA..."
    ]  # SSH key of user2
  }
]

# Networking Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["ap-northeast-1a"]
create_nat_gateway = false

# Security Configuration
ssh_allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this in production!

# S3 Configuration
s3_bucket_name = "your-custom-name"

# IAM Team Members Configuration
# This list defines team members who will have access to the project resources
# Each member will be added to the developers IAM group with access to:
# - Secrets Manager (read OpenRouter API keys, etc.)
# - S3 bucket (read/write)
team_members = [
  {
    username          = "admin"           # Your username
    role              = "admin"
    create_access_key = true              # Create programmatic access keys
    console_access    = false             # Enable AWS Console login (will require password reset on first login)
  },
  {
    username          = "member1"
    role              = "developer"
    create_access_key = true
    console_access    = false
  },
  {
    username          = "member2"
    role              = "developer"
    create_access_key = true
    console_access    = false
  }
]